<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:elevation="0dp"
    android:orientation="horizontal"
    android:padding="4dp" >

    <!-- CONSTRAINTS DATE -->

    <TextView
        android:id="@+id/tv_const_date"
        android:layout_width="@dimen/col_date"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="2dp"
        android:text="1 /1/ 2025" />

    <!-- CONSTRAINTS TYPE -->

    <TextView
        android:id="@+id/tv_const_type"
        android:layout_width="@dimen/col_const_type"
        android:layout_height="wrap_content"
        android:gravity="center"
		android:textColor="@color/textPrimary"
        android:padding="2dp"
        android:text="نوع القيد" />

    <!-- CONSTRAINTS DETAILS -->

    <TextView
        android:id="@+id/tv_const_detail"
        android:layout_width="@dimen/col_detail"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="2dp"
        android:text="قيد افتتاحي" />

    <!-- CONSTRAINTS DEBIT -->

    <TextView
        android:id="@+id/tv_const_debit"
        android:layout_width="@dimen/col_date"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="2dp"
        android:text="مدين" />

    <!-- CONSTRAINT CREDIT -->

    <TextView
        android:id="@+id/tv_const_credit"
        android:layout_width="@dimen/col_date"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="2dp"
        android:text="دائن" />

    <!-- CONSTRAINTS BALANCE -->

    <TextView
        android:id="@+id/tv_const_balance"
        android:layout_width="@dimen/col_date"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="2dp"
        android:text="الرصيد" />

    <!-- BALANCE INDICATOR -->

    <TextView
        android:id="@+id/tv_balance_indicator"
        android:layout_width="@dimen/col_date"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="2dp"
        android:text="م" />

</LinearLayout>
