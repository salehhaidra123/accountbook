<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_header"
    android:elevation="8dp"
    android:orientation="horizontal"
    android:padding="4dp" >

    <!-- CONSTRAINTS DATE -->

    <TextView
        android:layout_width="@dimen/col_date"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="2dp"
        android:text="التاريخ"
        android:textColor="@color/black" />

    <!-- CONSTRAINTS TYPE -->

    <TextView
        android:id="@+id/tv_const_type"
        android:layout_width="@dimen/col_const_type"
        android:layout_height="wrap_content"
        android:gravity="center"
		android:textColor="@color/textPrimary"
        android:padding="2dp"
        android:text="نوع القيد" />

    <!-- CONSTRAINTS DETAILS -->

    <TextView
        android:layout_width="@dimen/col_detail"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="2dp"
        android:text="الـــــبــــــيــــان"
        android:textColor="@color/black" />

    <!-- CONSTRAINTS DEBIT -->

    <TextView
        android:layout_width="@dimen/col_date"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="2dp"
        android:text="مدين"
        android:textColor="@color/black" />

    <!-- CONSTRAINT CREDIT -->

    <TextView
        android:layout_width="@dimen/col_date"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="2dp"
        android:text="دائن"
        android:textColor="@color/black" />

    <!-- CONSTRAINTS BALANCE -->

    <TextView
        android:layout_width="@dimen/col_date"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="2dp"
        android:text="الرصيد"
        android:textColor="@color/black" />

    <!-- BALANCE INDICATOR -->

    <TextView
        android:layout_width="@dimen/col_date"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="2dp"
        android:text="م"
        android:textColor="@color/black" />

</LinearLayout>