<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/background"
tools:context=".AddNewAccountDialogFragment">

<!-- Toolbar -->
<androidx.appcompat.widget.Toolbar
android:id="@+id/toolbar"
android:layout_width="0dp"
android:layout_height="?attr/actionBarSize"
android:background="@color/colorPrimary"
android:title="إضافة حساب جديد"
android:titleTextColor="@color/textPrimary"
app:layout_constraintTop_toTopOf="parent"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintEnd_toEndOf="parent" />

<!-- المحتوى -->
<androidx.constraintlayout.widget.ConstraintLayout
android:id="@+id/content_layout"
android:layout_width="0dp"
android:layout_height="0dp"
android:layout_marginHorizontal="20dp"
android:layout_marginTop="16dp"
android:layout_marginBottom="16dp"
app:layout_constraintTop_toBottomOf="@id/toolbar"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintEnd_toEndOf="parent"
app:layout_constraintBottom_toBottomOf="parent">

<!-- العنوان -->
<TextView
style="@style/AppTextView"
android:id="@+id/tv_page_title"
android:layout_width="wrap_content"
android:text="إضافة حساب جديد"
android:textSize="26sp"
android:textStyle="bold"
app:layout_constraintTop_toTopOf="parent"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintEnd_toEndOf="parent" />

<!-- التاريخ -->
<TextView
style="@style/AppTextView"
android:id="@+id/tv_account_date"
android:text="تاريخ الإضافة:"
android:textStyle="bold"
android:layout_marginTop="24dp"
app:layout_constraintTop_toBottomOf="@id/tv_page_title"
app:layout_constraintStart_toStartOf="parent" />

<com.google.android.material.textfield.TextInputLayout
style="@style/FbTextInput"
android:id="@+id/input_layout_account_date"
android:hint="اختر التاريخ"
app:layout_constraintTop_toBottomOf="@id/tv_account_date"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintEnd_toEndOf="parent"
android:layout_marginTop="8dp">

<com.google.android.material.textfield.TextInputEditText
android:id="@+id/et_account_date"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:inputType="none"
android:focusable="false"
android:singleLine="true"
android:gravity="start" />
</com.google.android.material.textfield.TextInputLayout>

<!-- نوع الحساب -->
<TextView
style="@style/AppTextView"
android:id="@+id/tv_account_type"
android:text="نوع الحساب:"
android:textStyle="bold"
android:layout_marginTop="20dp"
app:layout_constraintTop_toBottomOf="@id/input_layout_account_date"
app:layout_constraintStart_toStartOf="parent" />

<com.google.android.material.textfield.TextInputLayout
style="@style/FbTextInput"
android:id="@+id/spinner_layout_account_type"
android:hint="اختر نوع الحساب"
app:endIconMode="dropdown_menu"
android:layout_marginTop="8dp"
app:layout_constraintTop_toBottomOf="@id/tv_account_type"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintEnd_toEndOf="parent">

<!-- ✅ AutoCompleteTextView بدلاً من TextInputEditText -->
<AutoCompleteTextView
android:id="@+id/sp_account_type"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:inputType="none"
android:focusable="false"
android:gravity="center" />
</com.google.android.material.textfield.TextInputLayout>

<!-- اسم الحساب -->
<TextView
style="@style/AppTextView"
android:id="@+id/tv_account_name"
android:text="اسم الحساب:"
android:textStyle="bold"
android:layout_marginTop="20dp"
app:layout_constraintTop_toBottomOf="@id/spinner_layout_account_type"
app:layout_constraintStart_toStartOf="parent" />

<com.google.android.material.textfield.TextInputLayout
style="@style/FbTextInput"
android:id="@+id/input_layout_account_name"
android:hint="ادخل اسم الحساب"
android:layout_marginTop="8dp"
app:layout_constraintTop_toBottomOf="@id/tv_account_name"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintEnd_toEndOf="parent">

<com.google.android.material.textfield.TextInputEditText
android:id="@+id/et_account_name"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:singleLine="true" />
</com.google.android.material.textfield.TextInputLayout>

<!-- رقم الهاتف -->
<TextView
style="@style/AppTextView"
android:id="@+id/tv_account_phone"
android:text="رقم الهاتف:"
android:textStyle="bold"
android:layout_marginTop="20dp"
app:layout_constraintTop_toBottomOf="@id/input_layout_account_name"
app:layout_constraintStart_toStartOf="parent" />

<com.google.android.material.textfield.TextInputLayout
style="@style/FbTextInput"
android:id="@+id/input_layout_phone"
android:hint="ادخل رقم الهاتف"
android:layout_marginTop="8dp"
app:layout_constraintTop_toBottomOf="@id/tv_account_phone"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintEnd_toEndOf="parent">

<com.google.android.material.textfield.TextInputEditText
android:id="@+id/et_account_phone"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:inputType="phone"
android:singleLine="true" />
</com.google.android.material.textfield.TextInputLayout>

<!-- تصنيف الحساب -->
<TextView
style="@style/AppTextView"
android:id="@+id/tv_account_group"
android:text="تصنيف الحساب:"
android:textStyle="bold"
android:layout_marginTop="20dp"
app:layout_constraintTop_toBottomOf="@id/input_layout_phone"
app:layout_constraintStart_toStartOf="parent" />

<com.google.android.material.textfield.TextInputLayout
style="@style/FbTextInput"
android:id="@+id/sp_layout_account_group"
android:hint="اختر تصنيف الحساب"
app:endIconMode="dropdown_menu"
android:layout_marginTop="8dp"
app:layout_constraintTop_toBottomOf="@id/tv_account_group"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintEnd_toEndOf="parent">

<!-- ✅ AutoCompleteTextView بدلاً من TextInputEditText -->
<AutoCompleteTextView
android:id="@+id/sp_account_group"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:inputType="none"
android:focusable="false"
android:gravity="center" />
</com.google.android.material.textfield.TextInputLayout>

<!-- زر الإضافة -->
<com.google.android.material.button.MaterialButton
android:id="@+id/btn_add_new_acc"
android:layout_width="0dp"
android:layout_height="wrap_content"
android:layout_marginTop="30dp"
android:layout_marginBottom="12dp"
android:text="إضافة حساب"
android:textSize="18sp"
android:textColor="@android:color/white"
android:backgroundTint="@color/colorPrimary"
app:cornerRadius="8dp"
app:layout_constraintTop_toBottomOf="@id/sp_layout_account_group"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>